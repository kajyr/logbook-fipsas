{
  "compilerOptions": {
    "lib": ["es2015.promise", "es2017", "es2015", "es6"],
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./build",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "preserveSymlinks": true,
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "firefunctions"]
}
